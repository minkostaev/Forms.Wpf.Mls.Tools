<UserControl x:Class="Wpf.Test.Helper.Controls.Requests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Test.Helper.Controls"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Grid Height="20">
            <TextBox x:Name="txtUrl" />
        </Grid>
        <Grid Height="20">
            <ComboBox x:Name="cbMethod" Width="100" HorizontalAlignment="Left" />
            <Button x:Name="btnSend" Content="Send" Width="100" Margin="100,0,0,0" HorizontalAlignment="Left" />
            <TextBlock x:Name="tbResult" Text="Text" Margin="210,0,0,0" HorizontalAlignment="Left" />
        </Grid>
        <Grid Height="120">
            <TextBox x:Name="txtInBody" TextWrapping="Wrap" AcceptsReturn="True" />
        </Grid>
        <Grid Height="280" >
            <TextBox x:Name="txtOutResult" TextWrapping="Wrap" AcceptsReturn="True" />
        </Grid>
    </StackPanel>
</UserControl>