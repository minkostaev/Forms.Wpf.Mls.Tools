<UserControl x:Class="Wpf.Test.Helper.Controls.Windows"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Test.Helper.Controls" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <CheckBox x:Name="chBxSystemTray" Content="Show System Tray Icon" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chBxAlwaysOnTop" Content="Always On Top" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chBxShowInTaskbar" Content="Show In Taskbar" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chBxWindowsStartup" Content="Launch on Windows startup" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>