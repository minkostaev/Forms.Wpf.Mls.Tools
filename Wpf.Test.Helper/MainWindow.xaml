<Window x:Class="Wpf.Test.Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Test.Helper" mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <TabControl>
            <TabItem Header="Folders">
                <Grid x:Name="grdFolders"/>
            </TabItem>
            <TabItem Header="Windows">
                <Grid x:Name="grdWindows"/>
            </TabItem>
            <TabItem Header="Tree">
                <Grid x:Name="grdTree"/>
            </TabItem>
            <TabItem Header="Languages">
                <Grid x:Name="grdLanguage"/>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>